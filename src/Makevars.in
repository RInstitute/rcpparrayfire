## enviorment variables for building R package
CXX_STD = CXX11
PKG_CPPFLAGS = -I../inst/include @AF_INCLUDE@
AF_LIBS = @AF_LIBS@
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(AF_LIBS)

all: $(SHLIB)
	@if command -v install_name_tool; then echo "fixing install name"; install_name_tool -id '@rpath/RcppArrayFire.so' RcppArrayFire.so; fi
	@if command -v install_name_tool; then echo "fixing install name"; install_name_tool -add_rpath /opt/arrayfire/lib RcppArrayFire.so; fi
